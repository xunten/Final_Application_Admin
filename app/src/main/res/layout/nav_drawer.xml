<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/drawer_border"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:gravity="bottom"
        android:padding="16dp"
        android:background="@drawable/header_bkg"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/logo" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nameAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin - Shoes Shop"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/emailAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tientx.21it@vku.udn.vn"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/homePro"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_login"
            android:text="  Home - Product"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_home"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_login"
            android:text="  Orders"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_shopping_bag"
            android:padding="8dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/blue_login"/>

    <LinearLayout
        android:id="@+id/logout"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_login"
            android:text="  Log Out"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_logout"
            android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>