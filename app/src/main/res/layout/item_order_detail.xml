<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/item_proImgDetail"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/apple_watch_s8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/item_proImgDetail"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/item_proNameDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apple Watch S8"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/item_proQtyDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qty: 2"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/item_proPriceDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price: 2.000.000"
                    android:textStyle="bold"
                    android:textColor="#CC362B"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>